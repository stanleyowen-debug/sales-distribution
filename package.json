{
  "name": "lofi-player",
  "version": "1.0.0-beta",
  "private": true,
  "author": "Stanley Owen <stanleyowen06@gmail.com>",
  "dependencies": {
    "@emotion/react": "^11.8.1",
    "@emotion/styled": "^11.8.1",
    "@mui/lab": "^5.0.0-alpha.69",
    "@mui/material": "^5.4.2",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "clean-css-cli": "^5.5.2",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.1",
    "firebase": "^9.6.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "^4.0.3",
    "sass": "^1.43.4",
    "web-vitals": "^2.1.2"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "tauri": "tauri",
    "sass": "sass src/App.scss src/App.css",
    "sass-watch": "sass --watch src/App.scss src/App.css",
    "start": "yarn sass && react-scripts start",
    "build": "yarn sass && yarn css:minify && GENERATE_SOURCEMAP=false react-scripts build",
    "build:win": "yarn sass && yarn css:minify && cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "build:electron": "yarn build && electron-builder",
    "build:win:electron": "yarn build:win && electron-builder",
    "css:minify": "cleancss -o ./src/App.min.css ./src/App.css",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint -c .eslintrc.yml --ext .tsx ./src",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "wait-on tcp:3000 && electron ."
  },
  "build": {
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.5",
    "eslint": "^8.1.0",
    "eslint-plugin-react": "^7.26.1",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4",
    "wait-on": "^6.0.0"
  }
}